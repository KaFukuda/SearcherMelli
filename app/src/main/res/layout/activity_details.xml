<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Products.DetailsActivity">



    <RelativeLayout
        android:id="@+id/viewBar"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@color/yellow_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iconHeart"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="250dp"
            android:layout_marginBottom="-56dp"
            android:layout_toStartOf="@+id/iconHeart"
            app:srcCompat="@drawable/local" />

        <ImageView
            android:id="@+id/iconHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iconSearch"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="-20dp"
            android:layout_toStartOf="@+id/iconSearch"
            android:elevation="3dp"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:src="@drawable/heart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iconSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iconCart"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="-1dp"
            android:layout_toStartOf="@+id/iconCart"
            android:elevation="3dp"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:src="@drawable/search_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iconHeart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iconHeart" />

        <ImageView
            android:id="@+id/iconCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="23dp"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:src="@drawable/cart"
            app:layout_constraintBottom_toBottomOf="@+id/iconSearch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iconSearch"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconCart"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignBottom="@+id/iconCart"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="-38dp"
            android:text="Enviar em nome do Usuário - Endereço"
            tools:text="Enviar em nome do Usuário - Endereço" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="407dp"
        android:layout_height="320dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewBar"
        app:srcCompat="@drawable/big_car_test" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="502dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Descricao" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="TextView" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:text="$ 2.200.200"
        android:textColor="@color/black"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewBar" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />


</androidx.constraintlayout.widget.ConstraintLayout>